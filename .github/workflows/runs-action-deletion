name: Delete Workflow Runs for a Single Action

on:
  workflow_dispatch:
    inputs:
      action-name:
        description: 'Name of the action to delete runs for'
        required: true

jobs:
  delete-action-runs:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Delete Action Runs
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          ACTION_NAME: ${{ github.event.inputs.action-name }}
        run: |
          # Get a list of workflow runs for the specified action name
          runs=$(curl -s -X GET \
            -H "Authorization: Bearer $GITHUB_TOKEN" \
            "https://api.github.com/repos/${{ github.repository }}/actions/workflows" | jq -r --arg action "$ACTION_NAME" '.workflows[] | select(.name == $action) | .id')

          # Loop through and delete each workflow run
          for run_id in $runs; do
            echo "Deleting workflow run with ID: $run_id"
            curl -X DELETE \
              -H "Authorization: Bearer $GITHUB_TOKEN" \
              "https://api.github.com/repos/${{ github.repository }}/actions/runs/$run_id"
          done
